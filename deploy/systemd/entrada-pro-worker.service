[Unit]
Description=ENTRADA-PRO Worker (Python) - gera pro.json/top10.json/audit.json
After=network.target

[Service]
Type=simple
User=roteiro_ds
WorkingDirectory=/home/roteiro_ds/ENTRADA-PRO/worker
Environment=PYTHONUNBUFFERED=1
Environment=DATA_DIR=/home/roteiro_ds/ENTRADA-PRO/data
ExecStart=/usr/bin/python3 /home/roteiro_ds/ENTRADA-PRO/worker/worker_pro.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
